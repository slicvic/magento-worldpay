<?xml version="1.0"?>
<config>
    <modules>
        <Slicvic_WorldPay>
            <version>1.0.0.0</version>
        </Slicvic_WorldPay>
    </modules>
    <global>
        <helpers>
            <slicvicworldpay>
                <class>Slicvic_WorldPay_Helper</class>
            </slicvicworldpay>
        </helpers>
        <models>
            <slicvicworldpay>
                <class>Slicvic_WorldPay_Model</class>
            </slicvicworldpay>
        </models>
    </global>
    <default>
        <payment>
            <slicvic_worldpay>
                <active>1</active>
                <model>slicvicworldpay/method_cc</model>
                <payment_action>authorize</payment_action>
                <cctypes>AE,VI,MC,DI</cctypes>
                <order_status>processing</order_status>
                <title>Credit / Debit / Prepaid Cards (WorldPay)</title>
                <allowspecific>1</allowspecific>
                <specificcountry>US</specificcountry>
                <cctypes>AE,VI,MC,DI</cctypes>
                <api_url></api_url>
                <api_merchant_code></api_merchant_code>
                <api_password></api_password>
            </slicvic_worldpay>
        </payment>
    </default>
</config>
